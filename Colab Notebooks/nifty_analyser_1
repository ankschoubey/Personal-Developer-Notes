_table.columns = ['CALLS_OI', 'CALLS_Chng_in_OI','Strike_Price','PUTS_Chng_in_OI','PUTS_OI']\n","\n","    for column in filter_table.columns.values:\n","        filter_table[column] = filter_table[column].apply(convert_to_float)\n","    return filter_table\n","\n","def calculate(table, start, end):\n","    start_filter = table[table['Strike_Price'] >= start]\n","    end_filter = start_filter[start_filter['Strike_Price'] <= end] \n","    aggregate = end_filter.sum()\n","    aggregate['time'] = datetime.datetime.now(tz=tz).strftime(\"%H:%M\")\n","    aggregate['OI_change'] = aggregate['PUTS_Chng_in_OI'] - aggregate['CALLS_Chng_in_OI']\n","    aggregate['total_oi'] = aggregate['PUTS_OI'] - aggregate['CALLS_OI']\n","    aggregate['decision'] = 'BUY' if aggregate['OI_change'] >0 else 'SELL'\n","    return aggregate\n","\n","copy = \"\" #@param {type:\"string\"}\n","start = 8500 #@param {type:\"number\"}\n","end =  9500#@param {type:\"number\"}\n","clear_history = \"Clear History\" #@param [\"Append\", \"Clear History\"]\n","\n","if clear_history == \"Clear History\":\n","    df = get_df()\n","table = pd.read_html(copy)[0]\n","table = format_table(table)\n","aggregate = calculate(table,start, end)\n","df = df.append(aggregate,ignore_index=True)\n","\n","def get_graph():\n","    global df, all_calculations\n","    plt.plot(list(range(df.shape[0])), df['OI_change'].values.tolist())\n","df"],"execution_count":0,"outputs":[{"output_type":"execute_result","data":{"text/html":["<div>\n","<style scoped>\n","    .dataframe tbody tr th:only-of-type {\n","        vertical-align: middle;\n","    }\n","\n","    .dataframe tbody tr th {\n","        vertical-align: top;\n","    }\n","\n","    .dataframe thead th {\n","        text-align: right;\n","    }\n","</style>\n","<table border=\"1\" class=\"dataframe\">\n","  <thead>\n","    <tr style=\"text-align: right;\">\n","      <th></th>\n","      <th>time</th>\n","      <th>CALLS_OI</th>\n","      <th>CALLS_Chng_in_OI</th>\n","      <th